{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "sourceMap": false,
      "outDir": "dist",
      "removeComments": true,
      "strict": true,
      "noImplicitAny": false,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": [
      "models/**/*",
      "routes/**/*",
      "helpers/**/*",
      "interfaces/**/*",
      "typing/**/*",
      "app.ts"
    ]
}
