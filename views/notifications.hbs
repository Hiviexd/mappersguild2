<div id="app">

<div class="row">
    <div class="col-md-6">
        <h2>Notifications <button class="btn btn-mg btn-sm" @click.prevent="hideAll($event)">Mark all as read</button></h2> 
        <transition-group name="list" tag="div" class="row">
            <div class='col-md-12 my-2' v-for="notification in notifications" :key="notification.id">
                <div class="card custom-bg-dark border-rank-done" style="height: 100%">
                    <div class='card-body notification-card-spacing'>
                        <p class='card-text text-shadow small'>
                            <a :href="'https://osu.ppy.sh/users/' + notification.sender.osuId" class="text-shadow" target="_blank" @click.stop>\{{notification.sender.username}}</a> 
                            \{{notification.info}}
                            <span v-if="notification.map">
                                <span v-if="notification.map.url"><a  :href="notification.map.url" target="_blank">\{{notification.map.song.artist}} - \{{notification.map.song.title}}</a> [also show card]</span>
                                <span v-else>\{{notification.map.song.artist}} - \{{notification.map.song.title}} [also show card]</span>
                            </span>
                        </p>
                    </div>
                    <div class="card-footer notification-card-spacing mx-2">
                        <span class='card-text text-shadow small'>\{{notification.createdAt.slice(0,10)}}</span>
                        <button class="btn btn-mg notification-button float-right" @click.prevent="hideNotification(notification.id, $event)">Mark as read</button>
                    </div>
                </div>
            </div>
        </transition-group>
        <p v-if="!notifications || notifications.length == 0" class="ml-4">No notifications...</p>
    </div>

    <div class="col-md-6">
        <h2>Invites <button class="btn btn-mg-used btn-sm" @click.prevent="declineAll($event)">Decline all</button></h2> 
        <span class="errors">\{{info}}</span>
        <transition-group name="list" tag="div" class="row">
            <div class='col-md-12 my-2' v-for="invite in invites" :key="invite.id">
                <div class="card custom-bg-dark border-rank-done" style="height: 100%">
                    <div class='card-body notification-card-spacing'>
                        <p class='card-text text-shadow small'>
                            <a :href="'https://osu.ppy.sh/users/' + invite.sender.osuId" class="text-shadow" target="_blank" @click.stop>\{{invite.sender.username}}</a> 
                            \{{invite.info}}
                            <span v-if="invite.map">
                                <span v-if="invite.map.url"><a  :href="invite.map.url" target="_blank">\{{invite.map.song.artist}} - \{{invite.map.song.title}}</a> [also show card]</span>
                                <span v-else>\{{invite.map.song.artist}} - \{{invite.map.song.title}} [also show card]</span>
                            </span>
                        </p>
                    </div>
                    <div class="card-footer notification-card-spacing mx-2">
                        <span class='card-text text-shadow small'>\{{invite.createdAt.slice(0,10)}}</span>
                        <button class="btn btn-mg-used notification-button float-right mx-1" @click.prevent="declineInvite(invite.id, $event)">Decline</button>
                        <button class="btn btn-mg notification-button float-right mx-1" @click.prevent="acceptInvite(invite.id, invite.actionType, $event)">Accept</button>
                    </div>
                </div>
            </div>
        </transition-group>
        <p v-if="!invites || invites.length == 0" class="ml-4">No invites...</p>
    </div>
</div>


</div>